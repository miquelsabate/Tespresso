<%= render 'layouts/header' %>

<body>
  <% if (notice != nil)  %>
    <div class="container">
        <%= notice.html_safe %>
    </div>
  <% end %>

  <div class="product">
     <div class="container" style="text-align:center;">
        <h2 style="color:Black;text-transform:uppercase;"><%= @category.name %></h2>
        <br>
        <div class="card-deck">
          <% @products.each do |p| %>
            <div class="card">
              <img><%= image_tag p.image %></img>
              <div class="card-body">
                <h5 class="card-title"><%= p.name %></h5>
                <p class="card-text"><%= p.description %></p>
              </div>
              <div class="card-footer">
                <h2><span class="badge badge-secondary" style="background-color:Black;"><%= p.price %> €</span></h2>
                <a href="/addProduct/<%= p.id %>" class="btn btn-outline-dark">Añadir</a>
              </div>
            </div>
          <% end %>
        </div>

        </div>
     </div>
  </div>

  <%= render 'layouts/footer' %>
</body>
